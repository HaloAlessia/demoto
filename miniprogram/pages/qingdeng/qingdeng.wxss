/* pages/qingdeng/qingdeng.wxss */
.qingdeng-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background-color: transparent;
}

.qingdeng-info {
  display: flex;
  flex-direction: column;
  color: #ffffff;
  background-color: #cfa671;
  width: 100%;
  height: 300rpx;

}

.qingdeng-selector {
  background-color: white;
  margin: 10rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.qingdeng-item {
  display: flex;
  justify-items: center;
  align-items: center;
  margin-top: 20px;
}

.qingdeng-item-name {
  color: #424040;
  margin: 20rpx;
}

.qingdeng-picker {

  margin: 20rpx;
  display: flex;
  align-items: center;
  text-align: center;
  flex-direction: row;
}

.qingdeng-picker-name {
  color: #424040;
  margin: 15rpx;
}

.picker {
  color: #cc8931;
  width: 300rpx;
  border-bottom: 1rpx solid #faebd9;
  box-shadow: 20px 20px 15px rgba(0, 0, 0, 0.1);
  border-radius: 5rpx;
  background: rgba(245, 243, 243, 0.3);
  line-height: 65rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-left: 20rpx;
}

.picker_img {
  width: 25rpx;
  height: 30rpx;
  position: absolute;
  z-index: 100;
  left: 310rpx;
  top: 215rpx;

}