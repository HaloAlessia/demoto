/* pages/qingdeng/qingdeng.wxss */
.qingdeng-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background-color:transparent;
} 
.qingdeng-info {
  display: flex;
  flex-direction: column;
  color: #ffffff;
  background-color: #B4956C;
  width: 100%;
  height: 300rpx;
}

.qingdeng-item {
  display: flex;
  justify-items: center;
  align-items: center;
  margin-top: 20px;
}

.qingdeng-item-name {
  color: black;
  margin-right: 20px;
}
.picker{
  color: #333;
  background: #fff;
  position: absolute;
  font-size: 32rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 58rpx;

  opacity: 1;
  height: 64rpx;
  width: 270rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-left: 20rpx;
}
.origin_img {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  left: 170rpx;
  top: 40rpx;
}