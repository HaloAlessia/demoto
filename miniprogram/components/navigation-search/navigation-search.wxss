/* components/navigation-search/navigation-search.wxss */
.nav-bar {
  position: fixed;
  width: 100%;
  top: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.nav-bar .picker {
  color: #333;
  background: #fff;
  position: absolute;
}

.nav-bar .picker-content {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.nav-bar .search {
  width: 30%;
  color: #333;
  font-size: 14px;
  background: #fff;
  position: absolute;
  border-radius: 50px;
  background: #ddd;
  padding-left: 14px;
}